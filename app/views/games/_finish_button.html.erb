<div class="modal fade" id="winnerModal" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="winnerTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body text-center background-yellow">
        <div class="mb-2">
          <div class="px-5">
            <div class="player-card background-white text-center congrats">
              <h1 class="player-name">CONGRATULATIONS!</h1>
              <div class="<%= @game.winner_prize[:prize][:class_name] %> my_prize"></div>
            </div>
          </div>
        </div>

        <h2 class="text-center mb-4">Enter to win <%= indefinite_articlerize @game.winner_prize[:prize][:name] %> or Scratch tickets!</h2>

        <%= link_to game_path(encrypted_id(@game.winner_prize_id)), class: "btn mx-auto final mb-2 px-3" do %>
          ENTER TO WIN
        <% end %>
      </div>
    </div>
  </div>
</div>