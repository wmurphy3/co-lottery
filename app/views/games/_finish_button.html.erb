<div class="modal fade" id="winnerModal" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="winnerTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header text-center">
        Close
        <button type="button" class="btn-close close-my-prize" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body text-center">
        <div class="game-piece prize">
          <h3>CONGRATULATIONS!</h3>
          <div class="gift <%= @game.winner_prize[:prize][:class_name] %>"></div>
        </div>

        <p>Enter to win a <%= @game.winner_prize[:prize][:name] %> & scratch tickets!</p>

        <%= link_to game_path(@game.winner_prize_id), class: "btn btn-primary btn-lg winner-button" do %>
          ENTER TO WIN
        <% end %>
      </div>
    </div>
  </div>
</div>