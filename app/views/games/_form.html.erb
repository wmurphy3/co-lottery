<h4><a class="signed_up">Already Signed Up? Enter Your Email</a></h4>

<div class="col-md-4 offset-md-4 col-12 text-left">
  <%= form_for(User.new, remote: true, :html => {'parsley-validate' => '', id: 'login-search'}) do |f| %>
    <%= f.hidden_field :prize_id, value: @prize.id %>
    <div class="form row g-3 mb-6">
      <div class="col-md-6">
        <div class="mb-3">
          <label></label>
          <%= f.text_field :first_name, class: 'form-control form-control-lg',
            placeholder: 'First Name', :required => true, :data => {'parsley-trigger'=>"input", 
            'parsley-error-message'=> "Required"} %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="mb-3">
          <label></label>
          <%= f.text_field :last_name, class: 'form-control form-control-lg',
            placeholder: 'Last Name', :required => true, :data => {'parsley-trigger'=>"input",
            'parsley-error-message'=> "Required"} %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="mb-3">
          <label></label>
          <%= f.text_field :phone, class: 'form-control form-control-lg',
            placeholder: 'Phone Number', :required => true, :data => {'parsley-trigger'=>"input",
            'parsley-error-message'=> "Required"} %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="mb-3">
          <label></label>
          <%= f.email_field :email, autocomplete: "email", class: 'form-control form-control-lg',
            placeholder: 'Email', :required => true, :data => {'parsley-type' => "email", 'parsley-trigger'=>"input",
            'parsley-required-message'=> "Required", "parsley-type-message"=>"Invalid Email"} %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="mb-3">
          <label></label>
          <%= f.text_field :address, class: 'form-control form-control-lg',
            placeholder: 'Mailing Address', :required => true, :data => {'parsley-trigger'=>"input",
            'parsley-error-message'=> "Required"} %>
        </div>
      </div>
      <div class="col-md-12 ml-3">
        <div class="form-check mt-4">
          <input type="checkbox" class="form-check-input" id="confirm">
          <label class="form-check-label" for="confirm">I am at least 18 years of age.</label>
        </div>
      </div>
      <div class="col-md-12 ml-3">
        <div class="form-check mt-4">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <label class="form-check-label" for="confirm">Remember Me</label>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "ENTER RAFFLE", class: 'btn mx-auto mt-4 mb-4 enter-raffle', disabled: true %>
    </div>
  <% end %>
</div>