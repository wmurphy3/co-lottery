<div class="modal fade" id="myPrizeModal" tabindex="-1" data-backdrop="static" data-keyboard="false" aria-labelledby="myPrizeTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content background-yellow p-4">
      <div class="text-center">
      <%= submit_tag 'Close', :type => :reset, class: 'btn close-btn', "data-dismiss" => "modal", "aria-hidden" => "true" do %>
        <i class="fa fa-times-circle-o" aria-hidden="true"></i>
        <% end %>

      <div class="modal-body text-center">
        <div class="game-piece">
         <div class="player-card background-green text-center">
         <h2>YOU OPENED...</h2>
          <h1><%= @game.winner_prize[:prize][:name] %></h1>
        </div>
        <h2 class="mt-4">Try to keep or steal the gift you want by the end of the game!</h2>
      </div>
    </div>
  </div>
</div>

<script>
  $(function() {
    var myModalEl = document.getElementById('myPrizeModal')
    myModalEl.addEventListener('hidden.bs.modal', function (e) {
      var finished_game = $('.finished_game').val() == "true";

      if (finished_game) {
        $.ajax({
          type: 'get',
          url: ('/games/get_next'),
          async: false,
          dataType: 'script',
          success: function(data) {}
        });
      }
    })
  });
</script>
