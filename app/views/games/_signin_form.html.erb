<a class="sign_up">Sign Up?</a>

<%= form_for(UserPrize.new, remote: true, :html => {'parsley-validate' => '', id: 'new_user'}) do |f| %>
  <%= f.hidden_field :prize_id, value: @prize.id %>

  <div class="form-group">
    <label></label>
    <%= f.email_field :email, autocomplete: "email", class: 'form-control',
      placeholder: 'Email', :required => true, :data => {'parsley-type' => "email", 'parsley-trigger'=>"input"} %>
  </div>

  <div class="actions">
    <%= f.submit "ENTER RAFFLE", class: 'btn button btn-block mt-4 enter-raffle' %>
  </div>
<% end %>